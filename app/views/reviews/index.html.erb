<p style="color: green"><%= notice %></p>

<h1 class= "column">Reviews</h1>

<div class= "row right padm">
    <%= search_form_for @q do |f| %>
     <div class="large-5 small-4 columns">
      <%= f.label :Order_by_rating %>
      <%= sort_link(@q, :rating, %i(rating ),
        default_order: { rating: 'asc'}) %>
    </div>
    <div class="large-5 small-4 columns">
      <%= f.label :rating_minimum %>
      <%= f.select :rating_gteq, Review.pluck(:rating).uniq.sort %>
    <div>
     <div class="large-5 small-4 columns">
       <%= sort_link(@q, :created_at) do %>
        <strong>Order by date:</strong>
      <% end %>
    <div>
    <div class="large-5 small-4 columns">
      <%= sort_link(@q, :text) do %>
        <strong>Prioritize by text</strong>
      <% end %>
    </div>
      <div class="large-5 small-4 columns">
        <%= f.submit "Filter" %>
      </div>
    <%end %>

  </div>
</div>

<table>
 <thead>
  <tr>
    <th><strong>Rating:</strong></th>
    <th><strong>Text:</strong></th>
    <th><strong>Created At:</strong></th>
    <th colspan = "3"></th>
    </thead>
<tbody>
  <div id="reviews">
    <% @reviews.each do |review| %>
    <tr>
      <td><%=review.rating%></td>
      <td><%=review.text%></td>
      <td><%=review.created_at%></td>
    </tr>
    <% end %>
  </div>
  </tbody>
</table>